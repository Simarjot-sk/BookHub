<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schema.android.com/apk/res-auto"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/roundedImageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:scaleType="centerCrop"
        app2:layout_constraintBottom_toBottomOf="parent"
        app2:layout_constraintEnd_toEndOf="parent"
        app2:layout_constraintStart_toStartOf="parent"
        app2:layout_constraintTop_toTopOf="parent"
        app2:riv_border_color="@color/grey"
        app2:riv_border_width="2dp"
        app2:riv_corner_radius="10dp" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/minus"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:elevation="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/minus_square"
        app2:layout_constraintEnd_toEndOf="@+id/roundedImageView"
        app2:layout_constraintTop_toTopOf="@+id/roundedImageView"
        app2:riv_corner_radius="2.34dp" />
</androidx.constraintlayout.widget.ConstraintLayout>