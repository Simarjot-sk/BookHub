<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/book_image_1"
        android:layout_width="match_parent"
        android:layout_height="00dp"
        android:layout_above="@id/image_upload_button"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/upload_photo_background"
        app:layout_constraintBottom_toTopOf="@+id/guideline10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/image_upload_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_button"
        android:padding="5dp"
        android:text="Uplaod Image to Firebase"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".6" />

    <ImageView
        android:id="@+id/book_image_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/guideline11"
        app:layout_constraintEnd_toStartOf="@+id/book_image_3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/book_image_1"
        app:layout_constraintTop_toTopOf="@+id/guideline10"
        app:srcCompat="@drawable/flag_transparent" />

    <ImageView
        android:id="@+id/book_image_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/guideline11"
        app:layout_constraintEnd_toStartOf="@+id/book_image_4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/book_image_2"
        app:layout_constraintTop_toTopOf="@+id/guideline10"
        app:srcCompat="@drawable/flag_transparent" />

    <ImageView
        android:id="@+id/book_image_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/guideline11"
        app:layout_constraintEnd_toEndOf="@+id/book_image_1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/book_image_3"
        app:layout_constraintTop_toTopOf="@+id/guideline10"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/flag_transparent" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/minus_1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/minus"
        app:civ_border="false"
        app:layout_constraintBottom_toTopOf="@+id/book_image_1"
        app:layout_constraintEnd_toEndOf="@+id/book_image_1"
        app:layout_constraintStart_toEndOf="@+id/book_image_1"
        app:layout_constraintTop_toTopOf="@+id/book_image_1" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/minus_2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/minus"
        app:civ_border="false"
        app:layout_constraintBottom_toTopOf="@+id/guideline10"
        app:layout_constraintEnd_toEndOf="@+id/book_image_2"
        app:layout_constraintStart_toEndOf="@+id/book_image_2"
        app:layout_constraintTop_toTopOf="@+id/guideline10" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/minus_3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/minus"
        app:civ_border="false"
        app:layout_constraintBottom_toTopOf="@+id/guideline10"
        app:layout_constraintEnd_toEndOf="@+id/book_image_3"
        app:layout_constraintStart_toEndOf="@+id/book_image_3"
        app:layout_constraintTop_toTopOf="@+id/guideline10" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/minus_4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/minus"
        app:civ_border="false"
        app:layout_constraintBottom_toTopOf="@+id/guideline10"
        app:layout_constraintEnd_toEndOf="@+id/book_image_4"
        app:layout_constraintStart_toEndOf="@+id/book_image_4"
        app:layout_constraintTop_toTopOf="@+id/guideline10" />
</androidx.constraintlayout.widget.ConstraintLayout>