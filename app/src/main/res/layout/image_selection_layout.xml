<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/book_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        app2:layout_constraintBottom_toBottomOf="parent"
        app2:layout_constraintEnd_toEndOf="parent"
        app2:layout_constraintStart_toStartOf="parent"
        app2:layout_constraintTop_toTopOf="parent"
        app2:riv_border_color="@color/grey"
        app2:riv_border_width="2dp"
        app2:riv_corner_radius="10dp" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/overlay_img"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="#80000000"
        android:src="@drawable/ic_check_green_30dp"
        android:scaleType="center"
        app2:riv_corner_radius="10dp"
        app2:layout_constraintBottom_toBottomOf="@+id/book_image"
        app2:layout_constraintEnd_toEndOf="@+id/book_image"
        app2:layout_constraintStart_toStartOf="@+id/book_image"
        app2:layout_constraintTop_toTopOf="@+id/book_image"
       />

</androidx.constraintlayout.widget.ConstraintLayout>